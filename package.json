{
  "name": "tap-summary",
  "version": "1.0.0",
  "author": "Niklas Mollenhauer",
  "license": "MIT",
  "description": "GitHub Action to summarize TAP output for job/workflow summaries.",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "tsc --noEmit && esbuild --bundle --minify --platform=node index.ts --outfile=dist/index.js",
    "ci": "biome ci ./",
    "format": "biome format --write ./",
    "lint": "biome lint ./",
    "lint:apply": "biome lint --apply ./",
    "test": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:nikeee/tap-summary.git"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "glob": "^10.3.12",
    "tap-parser": "^15.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@types/node": "^20.12.7",
    "esbuild": "^0.21.4",
    "typescript": "^5.4.5"
  }
}
