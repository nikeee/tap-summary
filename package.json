{
	"name": "tap-summary",
	"version": "1.0.0",
	"author": "Niklas Mollenhauer",
	"license": "MIT",
	"description": "GitHub Action to summarize TAP output for job/workflow summaries.",
	"private": true,
	"main": "index.js",
	"scripts": {
		"build": "tsc --noEmit && esbuild --bundle --minify --platform=node --packages=bundle index.ts --outfile=dist/index.js",
		"ci": "biome ci ./",
		"format": "biome format --write ./",
		"lint": "biome lint ./",
		"lint:fix": "biome lint --write ./ && biome check --write ./",
		"test": "tsc --noEmit"
	},
	"repository": {
		"type": "git",
		"url": "git+git@github.com:nikeee/tap-summary.git"
	},
	"dependencies": {
		"@actions/core": "^1.11.1",
		"glob": "^11.0.2",
		"tap-parser": "^18.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.15.3",
		"esbuild": "^0.25.3",
		"typescript": "^5.8.3"
	}
}
